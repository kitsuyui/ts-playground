  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@jest/globals": "^29.7.0",
    "@swc/core": "^1.10.18",
    "@swc/jest": "^0.2.37",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "tsup": "^8.3.6",
    "typedoc": "^0.27.8",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@10.4.1"
}
