{
  "name": "@kitsuyui/ts-playground",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Yui Kitsu <kitsuyui@kitsuyui.com>",
  "description": "A playground for TypeScript",
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --minify --clean --sourcemap",
    "dev": "tsup src/index.ts --dts --format cjs,esm --minify --clean --sourcemap --watch --onSuccess 'node dist/index.js'",
    "test": "jest --coverage"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "devDependencies": {
    "@swc/core": "^1.3.62",
    "@swc/jest": "^0.2.26",
    "jest": "^29.5.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "tsup": "^6.7.0"
  }
}
