    "concurrently": "^9.1.1",
    "jest": "^29.7.0",
    "tsup": "^8.3.5",
    "turbo": "^2.3.3",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.3"
}
